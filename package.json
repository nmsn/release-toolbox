{
  "name": "release-toolbox",
  "version": "0.2.0",
  "description": "A push release gui tool.",
  "keywords": [
    "git",
    "github",
    "npm",
    "inquirer",
    "gui",
    "push",
    "release"
  ],
  "author": "nmsn <1336696700@qq.com>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "bin": {
    "rltb": "/lib/cli.js"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "tsc --build --clean",
    "build:es": "tsc",
    "build:watch": "tsc --watch",
    "build": "npm run clean && npm run build:es",
    "release": "npm run build && node ./lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmsn/release-toolbox.git"
  },
  "bugs": {
    "url": "https://github.com/nmsn/release-toolbox/issues"
  },
  "homepage": "https://github.com/nmsn/release-toolbox#readme",
  "dependencies": {
    "@octokit/core": "^5.0.0",
    "chalk": "^5.2.0",
    "inquirer": "^9.2.6",
    "semver": "^7.5.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.2.5",
    "@types/semver": "^7.5.0",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16"
  }
}
