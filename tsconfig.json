{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "removeComments": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true
  },
  "include": ["./src/**/*"]
}
